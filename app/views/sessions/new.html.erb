<center>

  <div class="signin-centered">
    <h1>DASH INCUBATOR</h1>
    <p>This is how it starts.</p>

      <div class="signin-box">

        <h3>Sign in</h3>

        <%= form_tag do %>
          <p><%= email_field_tag :email, nil, placeholder: "email" %></p>
          <p><%= password_field_tag :password, nil, placeholder: "password" %></p>
          <p><%= submit_tag "Log in", class: 'pink-btn' %></p>
          <p><%= link_to "Forget your password?", new_password_reset_path %></p>
        <% end %>
    </div>
  </div>
</center>
