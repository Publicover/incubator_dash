<center>
<%= form_for @student, html: { multipart: true } do |f| %>

  <% if @student.errors.any? %>

    <div id="error_explanation">
      <p>
        <%= pluralize(@student.errors.count, "error") %> prohibited
        this article from being saved:
      </p>
