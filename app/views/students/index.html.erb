<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>

<p id="notice"><%= notice %></p>

<center>

<% if session[:user_flavor] == "admin" %>
  <h1> THIS ISN'T YOUR RECORD </h1>
  <h2> BUT WE LEFT IT LIVE BECAUSE THE WEBMASTER MIGHT NEED TO GET IN HERE SOMETIME </h2>
<% else %>
  <h1>Your Assignments</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Your Name</th>
      <th>Your Email</th>
      <th>Your Admin</th>
      <th>Your Assignments</th>
      <th>Due:</th>
      <th>Completed?</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <!-- TODO REPLICATE THE BELOW -->
        <td><%= student.admin.name %></td>
        <td><% student.assignments.each do |assignment| %>
              <!-- <%= assignment.title %> -->
          <br><%= assignment.title %>
        <% end %> </td>
        <td><% student.assignments.each do |assignment| %>
              <!-- <td><%= assignment.due_date.strftime("%b %e, %Y") %></td> -->
          <br><%= assignment.due_date.strftime("%b %e, %Y") %>
        <% end %></td>
        <td><% student.assignments.each do |assignment| %>
          <br><%= assignment.completed %>
        <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <!-- <p>Make a new student: <%= link_to 'NEW STUDENTS', new_student_path %></p> -->

  <p>Go back to the dashboard: <%= link_to 'FRONT PAGE', root_path %></p>

<p><%= link_to 'Logout', logout_path, method: :delete %></p>

</center>
