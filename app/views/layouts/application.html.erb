<!DOCTYPE html>
<html>
  <head>
    <title>IncubatorDash</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Montserrat" %>
    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Spectral" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <%= render 'partials/nav_bar' unless @disable_nav %>
    <div class="content">
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
      <%= yield %>
        <!-- <div class="push"></div> -->
      </div>
    <%= render 'partials/footer' unless @disable_nav %>
  </body>
</html>
