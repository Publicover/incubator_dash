<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>

<p id="notice"><%= notice %></p>

<center>

<% if session[:user_flavor] == "admin" %>
  <h1> THIS ISN'T YOUR RECORD </h1>
  <h2> BUT WE LEFT IT LIVE BECAUSE THE WEBMASTER MIGHT NEED TO GET IN HERE SOMETIME </h2>
<% else %>
  <h1>Your Assignments</h1>
<% end %>

<table>
  <caption>students-table</caption>
  <thead>
    <tr>
      <th>Your Name</th>
      <th>Your Email</th>
      <th>Your Admin</th>
      <th>Your Assignments</th>
      <th>Due:</th>
      <th>Completed?</th>
      <th>TEST</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <!-- TODO REPLICATE THE BELOW -->
        <td><%= student.admin.name %></td>
        <td><% student.assignments.each do |assignment| %>
              <!-- <%= assignment.title %> -->
          <!-- <br><%= assignment.title %> -->
          <%= link_to "#{assignment.title}", assignment_path(assignment) %><br>
        <% end %> </td>
        <td><% student.assignments.each do |assignment| %>
              <!-- <td><%= assignment.due_date.strftime("%b %e, %Y") %></td> -->
          <br><%= assignment.due_date.strftime("%b %e, %Y") %>
        <% end %></td>
        <td><% student.assignments.each do |assignment| %>
          <br><%= assignment.completed %>
        <% end %> </td>
        <td><% student.homeworks.each do |homework| %>
        <% if homework.document.exists? %>
            <br><%= homework.title %> complete!
          <% else %>
            <br><%= homework.title %> homework not done yet
            <!-- <%= link_to "hand it in", assignment_path(homework.assignment_id) %> -->
          <% end %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <!-- <p>Make a new student: <%= link_to 'NEW STUDENTS', new_student_path %></p> -->

<p>Go back to the dashboard: <%= link_to 'FRONT PAGE', root_path %></p>
<p><%= link_to 'Logout', logout_path, method: :delete %></p>

</center>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due date</th>
    </tr>
  </thead>
  <tbody>

      <% @assignments.each do |assignment| %>
      <tr>
      <td><%= assignment.title %></td>
      <td><%= assignment.due_date %></td>
      <!-- <td><%= assignment.student_ids.document_file_name %></td> -->
      <% end %>
    </tr>
  </tbody>
</table>
