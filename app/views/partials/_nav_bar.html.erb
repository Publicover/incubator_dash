<center>
  <div id='top-nav'>
    <div id='nav-left'>
      <p>Hey, all.</p>
      <p>Hi, <%= session[:user_name] %>. </p>
    </div>
    <div id='nav-right'>
      <% if current_user.avatar.blank? %>
        <p>Update your avatar! </p><p><%= link_to "MY PROFILE", student_path(current_user) %></p>
