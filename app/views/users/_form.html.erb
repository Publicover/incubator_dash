<center>
<%= form_for @user, html: { multipart: true } do |f| %>

  <% if @user.errors.any? %>

    <div id="error_explanation">
      <p>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:
      </p>
      <% @user.errors.full_messages.each do |msg| %>
        <li><center><%= msg %></li>
      <% end %>
    </div>

  <% end %>

  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label "Email" %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label "Password" %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.hidden_field :role, value: "student" %>
  </p>

  <p>
    <%= f.label "course_name" %><br>
    <%= f.select :course_name, [["GBO INC", 1], ["rdu inc", 2]] %>
  </p>

  <p>
    <%= f.label :avatar%><br>
    <%= f.file_field :avatar %>
  </p>

  <p>
    <%= f.label "Assignments" %> <br>
    <%= f.collection_check_boxes :assignment_ids, Assignment.all, :id, :title do |assignment| %>
      <div class="collection-check-box">
        <%= assignment.check_box %>
        <%= assignment.label %>
      </div>
      <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
</center>
