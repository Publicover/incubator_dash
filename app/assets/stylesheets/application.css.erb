 ::-moz-selection {
    color: white;
    background-color: #FF0060;
 }

 ::selection {
   color: white;
   background-color: #FF0060;
 }

 body {
   font-family: 'Spectral', 'serif';
   padding-top: 65px;
   margin: 0;
   height: 100vh;
   display: flex;
   flex-direction: column;
 }

 html {
   height: 100vh;
 }

 .content {
  /*padding: 20px;*/
  /*min-height: 100%;*/
  /*margin: 0 auto -50px;*/
  flex: 1 0 auto;
  padding: 20px;
}

.grid {
  display: flex;
  justify-content: space-between;
  border: 1px solid red;
}

.left {
  flex: 1;
  width: 40%;
  font-size: 2.75vw;
  text-align: center;
  margin: 3%;
  border: 1px solid black;
}

.right {
  flex: 1;
  width: 40%;
  text-align: left;
  margin: 3%;
  border: 1px solid black;
}

.middle {
  width: 80%;
  text-align: center;
  padding-left: 10%;
  padding-right: 10%;
  border: 1px solid black;
}

#footer {
  color: white;
  background-color: #2E2E2E;
  height: 50px;
  /*padding-top: 25px;*/
  padding: 20px;
}

#footer a {
  color: white;
}

/*.push {
  height: 50px;
}*/

 .pink {
   color: #FF0060;
 }

 table {
   border-collapse: collapse;
   margin-bottom: 20px;
 }

 table::after {
   margin-bottom: 10px;
 }

 table, th, td {
   border: 1px solid #babdc1;
   border-radius: 3px;
   border-style: rounded;
 }

 th {
   color: #FF0060;
 }

 th, td {
   padding: 5px;
   /*vertical-align: bottom;*/
 }

 tr:nth-child(even) {
   background: #D7DBDD;
 }

 tr:nth-child(odd) {
   background: #FFF;
 }

 th {
   background: #D7DBDD;
 }

 caption {
   visibility: hidden;
 }

 .img-circle {
   border-radius: 50%;
   margin-right: 10px;
   margin-top: 10px;
 }

 input {
   border-radius: 2px;
   padding: 3px;
 }

 .pink-btn {
   background-color: #FF0060;
   border: 2px solid white;
   padding-top: 15px;
   padding-right: 30px;
   padding-bottom: 15px;
   padding-left: 30px;
   color: white;
   font-size: 1em;
 }

 #notice {
   color: #FF0060;
   background-color: white;
 }

 #top-nav {
   display: flex;
   background: white;
   padding: 10px;
   top: 0;
   z-index: 100;
   width: 98%;
   position: fixed;
   opacity: 0.98;
 }

 #nav-bold {
   font-weight: normal;
   font-family: 'Montserrat', 'sans-serif';
   font-size: 0.85em;
 }

 #nav-left {
   flex: 0 0 25%;
   text-align: left;
 }

 #nav-middle {
   flex: 1;
   vertical-align: top;
   display: inline-block;
   text-align: right;
   margin: auto;
   width: 50%;
   padding: 10px;
 }

 #nav-right {
   flex: 0 0 25%;
 }

 .homework-blocks {
   background-color: lightgray;
 }

 .inside-homework {
   padding: 5px;
   border: 1px solid black;
   margin: 5px;
   background-color: white;
   display: inline-block;
 }

 h1, h2, h3, h4, h5, h6 {
   font-family: 'Montserrat', 'sans-serif';
 }

 .blue_words {
   color: 'blue';
 }

 .green_words {
   color: 'green';
 }
